@inproceedings{10.1145/3458336.3465305,
author = {Carreira, Joao and Kohli, Sumer and Bruno, Rodrigo and Fonseca, Pedro},
title = {From warm to hot starts: leveraging runtimes for the serverless era},
year = {2021},
