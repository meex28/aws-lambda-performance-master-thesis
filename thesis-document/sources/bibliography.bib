@inproceedings{10.1145/3631295.3631394,
author = {Chen, Xinghan and Hung, Ling-Hong and Cordingly, Robert and Lloyd, Wes},
title = {X86 vs. ARM64: An Investigation of Factors Influencing Serverless Performance},
year = {2023},
isbn = {9798400704550},
